
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel Login</title>
    <link rel="stylesheet" href="Css/style.css">
</head>
<body>
    <div class="container">
        <div class="contact-form"></div>
        @using (Html.BeginForm("Login", "GirisYap", FormMethod.Post))
        {
            <img src="~/Web-Admin-Login/img/Admin panel.png" class="Admin-img">
            <h2>Tatil Seyahat Blogu Giriş Formu</h2>
            <form>
                <div class="txtb">
                    <input type="text" name="Kullanici" placeholder="Kullanıcı Adınız">
                </div>
                <div class="txtb">
                    <input type="password" name="Sifre" placeholder="Şifreniz">
                </div>
                <br />
                <input type="submit" class="logbtn" value="Giriş Yap">

            </form>
        }

    </div>
</body>
</html>


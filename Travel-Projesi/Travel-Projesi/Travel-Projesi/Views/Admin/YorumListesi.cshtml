@using Travel_Projesi.Models.Siniflar
@model List<Yorum>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>Kullanıcı</td>
        <td>Mail</td>
        <td>Yorum</td>
        <td>Blog</td>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID </td>
            <td>@x.KullaniciAdi </td>
            <td>@x.Mail </td>
            <td>@x.Yorumlar </td>
            <td> @x.Blog.Baslik</td>
            <td><a href="/Admin/YorumSil/@x.ID/" class="btn btn-danger">Sil</a></td>
            <td> <a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>


        </tr>
    }

</table>


@using Travel_Projesi.Models.Siniflar
@model List<İletisim>
@{
    ViewBag.Title = "İletisimListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İletisim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>AD-SOYAD</td>
        <td>MAİL</td>
        <td>KONU</td>
        <td>MESAJ</td>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AdSoyad</td>
            <td>@x.Mail</td>
            <td>@x.Konu</td>
            <td>@x.Mesaj</td>
            <td><a href="/Admin/İletisimSil/@x.ID/" class="btn btn-danger">Sil</a></td>
            <td><a href="~/Admin/İletisimGuncelle/@x.ID/" class="btn btn-danger">Güncelle</a></td>
        </tr>
    }



</table>
<a href="/Admin/Yeniİletisim/" class="btn btn-primary">İletişime geçmek için tıklayınız</a>


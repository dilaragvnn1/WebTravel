@model Travel_Projesi.Models.Siniflar.İletisim
    
@{
    ViewBag.Title = "Yeniİletisim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni İletişim Ekle</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.AdSoyad)
    @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Konu)
    @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mesaj)
    @Html.TextAreaFor(x => x.Mesaj, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Yeni İletişim Bilgisi Ekle</button>
</form>


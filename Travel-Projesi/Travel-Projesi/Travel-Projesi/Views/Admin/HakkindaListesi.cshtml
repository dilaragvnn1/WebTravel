@using Travel_Projesi.Models.Siniflar
@model List<Hakkimizda>
@{
    ViewBag.Title = "HakkindaListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkinda Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>AÇIKLAMA</th>
        <th>RESİM</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Aciklama</td> 
            <td>
                <img src='~/webSeyehat2/images/ParisYemek.jpg/@x.FotoUrl'style="width:100px; height:100px" />
            </td>
            <td><a href="~/Admin/HakkimdaSil/@x.ID/" class="btn btn-danger">Sil</a></td>
            <td><a href="~/Admin/HakkimdaGetir/@x.ID/" class="btn btn-danger">Güncelle</a></td>
        </tr>
    }



</table>
<a href="/Admin/YeniHakkimda/" class="btn btn-primary">Hakkımda Kısmını Görmek İçin Tıklayınız </a>
